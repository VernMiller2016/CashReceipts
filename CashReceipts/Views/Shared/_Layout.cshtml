<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cash Receipting</title>
    @Styles.Render("~/Content/allcss")
    @Styles.Render("~/Scripts/KendoUI2016.2.504/styles/Kendo")
    @Scripts.Render("~/bundles/scripts")
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")" class="navbar-brand">Cash Receipting</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Clerks", "Index", "Clerks")</li>
                    <li>@Html.ActionLink("Entity", "Index", "Entities")</li>
                    @*<li>@Html.ActionLink("Tender", "Index", "Tenders")</li>*@
                    <li>@Html.ActionLink("Departments", "Index", "Departments")</li>
                    <li>@Html.ActionLink("Accounts", "Index", "Templates")</li>
                    <li>@Html.ActionLink("Receipt", "Index", "ReceiptHeaders")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

        <footer>
            <hr />
            <p>&copy; 2016 - Cash Receipting</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
    <script>
        $(document).ready(function () {
            $.ajaxSetup({ cache: false });
        });
    </script>
</body>
</html>
