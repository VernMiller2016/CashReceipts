@model IEnumerable<CashReceipts.Models.Template>

@{
    ViewData["Title"] = "Templates";
}

<h2>Accounts</h2>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@

@using (Html.BeginForm())
{
    <p>
        Select Department: @Html.DropDownList("SelectedDepartment", "All")
        <input type="submit" value="Filter" />
    </p>
}

<table class="table">
    <tr>
        <th>
            Account Number
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            Department
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fund).@Html.DisplayFor(modelItem => item.Dept).@Html.DisplayFor(modelItem => item.Program).@Html.DisplayFor(modelItem => item.Project).@Html.DisplayFor(modelItem => item.BaseElementObjectDetail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @(item.Department != null ? item.Department.Name : "")
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TemplateID }) |
                @Html.ActionLink("Details", "Details", new { id = item.TemplateID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.TemplateID })
            </td>
        </tr>
    }
</table>
@Html.Partial("_HighlightMenu", 3)
