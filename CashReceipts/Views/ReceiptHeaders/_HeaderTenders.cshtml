@using CashReceipts.Models
@model List<Tender>

<h4>Tenders</h4>
<table class="table">
    <tr>
        <th>
            Description
        </th>
        <th>
            Amount
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Tenders", new { id = item.TenderID }, null) |
                @Html.ActionLink("Details", "Details", "Tenders", new { id = item.TenderID }, null) |
                @Html.ActionLink("Delete", "Delete", "Tenders", new { id = item.TenderID }, null)
            </td>
        </tr>
    }

</table>

